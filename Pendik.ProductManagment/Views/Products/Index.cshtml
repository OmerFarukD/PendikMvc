@model List<ProductResponseDto>
<a asp-controller="Products" asp-action="Create" class="btn btn-outline-success" style="margin-bottom: 30px">Ekle</a>

<div class="row">
    <div class="col-md-3">
       <ul class="list-group">
         <li class="list-group-item disabled" aria-disabled="true">A disabled item</li>
         <li class="list-group-item">A second item</li>
         <li class="list-group-item">A third item</li>
         <li class="list-group-item">A fourth item</li>
         <li class="list-group-item">And a fifth one</li>
       </ul> 
    </div>
    <div class="col-md-9">
        <table class="table table-hover table-warning table-striped">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Ürün Adı</th>
                <th scope="col">Değeri</th>
                <th scope="col">Stok Adedi</th>
                <th scope="col">Kategori Adı</th>
                <th scope="col">Satışta Mı ?</th>
                <th scope="col">İşlemler</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td><span class="badge rounded-pill bg-secondary">@item.Price</span></td>
                    <td><span class="badge rounded-pill bg-warning text-dark">@item.Stock</span></td>
                    <td>@item.CategoryName</td>
                    <td><input class="form-check-input" type="checkbox" value="@item.IsOnSale" disabled></td>
                    <td><a href=""> Detaya Git</a></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

