@model ProductAddRequestDto


<form asp-action="Create" asp-controller="Products" method="post">
    <div class="mb-3">
        <label asp-for="Name"  class="form-label">Ürün Adı</label>
        <input asp-for="Name" type="text" class="form-control">
          <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="Price"  class="form-label">Değeri</label>
        <input asp-for="Price" type="number" class="form-control">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    
    
    <div class="mb-3">
        <label asp-for="Stock"  class="form-label">Stok Adedi</label>
        <input asp-for="Stock" type="number" class="form-control">
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    
    
    <div class="mb-3">
        <label asp-for="CategoryId"  class="form-label">Kategori Adı</label>
        <vc:category-select-list></vc:category-select-list>
    </div>
    
    <div class="mb-3 form-check">
        <input asp-for="IsOnSale" type="checkbox" class="form-check-input" id="exampleCheck1">
        <label asp-for="IsOnSale" class="form-check-label" for="exampleCheck1">Satışta mı</label>
        <span asp-validation-for="IsOnSale" class="text-danger"></span>
    </div>
       <button type="submit" class="btn btn-outline-success" style="margin-right: 5px">Ekle</button>
       <button type="reset" class="btn btn-outline-info" style="margin-right: 5px">Resetle</button>
       <button type="reset" class="btn btn-outline-secondary">Ürünlere git</button>
</form>