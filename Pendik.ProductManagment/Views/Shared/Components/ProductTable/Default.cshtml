@model List<ProductResponseDto>
     <table class="table table-hover table-warning table-striped">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Ürün Adı</th>
                <th scope="col">Değeri</th>
                <th scope="col">Stok Adedi</th>
                <th scope="col">Kategori Adı</th>
                <th scope="col">Satışta Mı ?</th>
                <th scope="col">İşlemler</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <partial name="Partials/_ProductPriceBadgePartial" model="item"/>
                    <td><span class="badge rounded-pill bg-warning text-dark">@item.Stock</span></td>
                    <td>@item.CategoryName</td>
                    <td><input class="form-check-input" type="checkbox" @(item.IsOnSale ? "checked": "") disabled></td>
                    <td><a asp-controller="Products" asp-action="Detail" asp-route-id="@item.Id"> Detaya Git</a></td>
                </tr>
            }
            </tbody>
        </table>
