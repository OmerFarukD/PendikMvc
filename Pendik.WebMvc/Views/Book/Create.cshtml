@model Book

<form asp-controller="Book" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Id"  class="form-label">Id</label>
        <input asp-for="Id" type="number" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Title"  class="form-label">Title</label>
        <input asp-for="Title" type="text" class="form-control" >
    </div>

    <div class="mb-3">
        <label asp-for="Description"  class="form-label">Description</label>
        <input asp-for="Description" type="text" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Price"  class="form-label">Price</label>
        <input asp-for="Price" type="number" class="form-control">
    </div>
    
    <button type="submit" class="btn btn-outline-success">Ekle</button>

</form>
