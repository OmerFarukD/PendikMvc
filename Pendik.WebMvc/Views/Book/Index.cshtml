@model List<Book>

<a asp-controller="Book" asp-action="Create" class="btn btn-success">Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
      
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td><a asp-controller="Book" asp-action="Detail" asp-route-bookId="@item.Id" >Detaya Git</a></td>
            </tr>
        }
    </tbody>
</table>
